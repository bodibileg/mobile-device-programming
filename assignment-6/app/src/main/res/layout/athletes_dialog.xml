<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/add_athlete_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Athlete Name" />

    <EditText
        android:id="@+id/add_athlete_sport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Athlete Sport" />

    <EditText
        android:id="@+id/add_athlete_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Athlete Country" />

    <EditText
        android:id="@+id/add_athlete_personal_best"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Athlete Personal Best" />

    <EditText
        android:id="@+id/add_athlete_number_of_medals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number of Medals"
        android:inputType="number" />

    <EditText
        android:id="@+id/add_athlete_interesting_facts"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="Interesting Facts" />

</LinearLayout>